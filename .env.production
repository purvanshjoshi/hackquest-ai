# ============================================
# HackQuest AI - Production Environment Config
# ============================================
# Replace all placeholders with actual values before deployment

# Database Configuration
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://dbadmin:YOUR_PASSWORD_HERE@hackquest-db-server.postgres.database.azure.com:5432/hackquest_db

# Security
SECRET_KEY=YOUR_SECRET_KEY_HERE_MIN_32_CHARS
JWT_SECRET=YOUR_JWT_SECRET_HERE_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE
PINECONE_API_KEY=YOUR_PINECONE_API_KEY_HERE
PINECONE_ENVIRONMENT=YOUR_PINECONE_ENVIRONMENT_HERE

# Service Configuration
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com
FRONTEND_URL_ALT=https://hackquest-frontend.azurestaticapps.net

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=60

# Database Configuration
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Azure Configuration
AZURE_STORAGE_ACCOUNT=YOUR_STORAGE_ACCOUNT_HERE
AZURE_STORAGE_KEY=YOUR_STORAGE_KEY_HERE
AZURE_KEYVAULT_URL=https://hackquest-keyvault.vault.azure.net/

# Logging & Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=YOUR_APP_INSIGHTS_CONNECTION_STRING_HERE
