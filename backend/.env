# HackQuest AI Environment Configuration
# Complete configuration with all required components

# ========== APPLICATION ==========
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=info
PROJECT_NAME=HackQuest AI
DEBUG=True
VERSION=1.0.0

# ========== MONGODB ==========
# Local MongoDB:
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=hackquest

# For MongoDB Atlas (cloud), uncomment and use:
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# MONGODB_DB=hackquest

# ========== REDIS ==========
# Local Redis:
REDIS_URL=redis://localhost:6379/0

# For Redis Cloud, uncomment and use:
# REDIS_URL=redis://username:password@host:port

# ========== PINECONE (Vector Database) ==========
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=us-east-1
PINECONE_INDEX=hackquest-index

# ========== GROQ API (LLM) ==========
# Get your API key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# ========== HUGGING FACE ==========
HF_API_KEY=your_hugging_face_api_key_here
HF_MODEL_ID=sentence-transformers/all-MiniLM-L6-v2

# ========== GITHUB ==========
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ========== JWT AUTHENTICATION ==========
# Generate a secure key: openssl rand -hex 32
# For production, use: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========== CORS ==========
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ========== SCRAPER ==========
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_TIMEOUT=30
SCRAPER_RETRIES=3
MAX_WORKERS=4

# ========== EMAIL (Optional for notifications) ==========
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# ========== DATABASE SEEDING ==========
# Set to true to seed initial hackathon data on startup
SEED_DATABASE=false

# ========== FEATURE FLAGS ==========
ENABLE_ANALYTICS=false
ENABLE_DEBUG=true

# ========== API ENDPOINTS ==========
# These are used for development/testing
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# ========== SECURITY ==========
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
