# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=hackquest

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# EXTERNAL API KEYS (Get these from the respective services)
# ============================================================================
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Get from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=hackquest-index

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-a-secure-random-key-in-production

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000

SCRAPER_TIMEOUT=10
SCRAPER_RETRIES=3

# ========== EMAIL (Optional for notifications) ==========
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# ========== DATABASE SEEDING ==========
# Set to true to seed initial hackathon data on startup
SEED_DATABASE=false
